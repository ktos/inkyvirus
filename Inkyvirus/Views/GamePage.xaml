<Page
    x:Class="Inkyvirus.Views.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Inkyvirus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas">
        <TextBlock Text="X" x:Name="background" FontSize="700" Canvas.Left="500" />
        <InkCanvas x:Name="inkCanvas" Canvas.Left="0" Canvas.Top="0" />
        <TextBlock x:Name="time" FontSize="50" />

        <MediaElement Source="ms-appx:///Assets/Audio/kill.wav" AutoPlay="False" x:Name="audioKill" />
    </Canvas>
</Page>